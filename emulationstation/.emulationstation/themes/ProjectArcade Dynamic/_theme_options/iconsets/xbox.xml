<theme>
	<formatVersion>7</formatVersion>

	<view name="menu, system, detailed, grid">
		<helpsystem name="help">
			<iconColor>FFFFFFFF</iconColor>
			<iconUpDown>./xbox/updown.png</iconUpDown>
			<iconLeftRight>./xbox/leftright.png</iconLeftRight>
			<iconUpDownLeftRight>./xbox/all.png</iconUpDownLeftRight>
			<iconA>:/help/button_b.svg</iconA>
			<iconB>:/help/button_a.svg</iconB>
			<iconX>:/help/button_y.svg</iconX>
			<iconY>:/help/button_x.svg</iconY>
			<iconL>./xbox/l.png</iconL>
			<iconR>./xbox/r.png</iconR>
			<iconStart>./xbox/start.png</iconStart>
			<iconSelect>./xbox/select.png</iconSelect>
		</helpsystem>
	</view>
	<view name="screen">
		<controllerActivity name="controllerActivity">
			<imagePath>./xbox/controller.svg</imagePath>
			<itemSpacing>0.005</itemSpacing>
		</controllerActivity>

	</view>

</theme>