      <origin>0 0</origin>
      <pos>0.53 0.16</pos>
      <size>0.4 0.774</size>
      <zIndex>12</zIndex>
    </image>

    <image name="detailsBkR" extra="true">
      <path>./../art/filter.png</path>
      <color>00000000</color>
      <colorEnd>00000010</colorEnd>
