<theme defaultView="Icons">
  <formatVersion>7</formatVersion>
  <view name="gamecarousel" displayName="${gameCarouselViewName}">
    <gamecarousel name="gamecarousel">
      <type>vertical_wheel</type>
      <pos>0 0.162</pos>
      <size>0.52 0.775</size>
      <logoScale>4.6</logoScale>
      <logoSize>0.15 0.12</logoSize>
      <maxLogoCount>15</maxLogoCount>
      <imageSource>marquee</imageSource> <!-- text, image, thumbnail, marquee -->
      <zIndex>10</zIndex>
    </gamecarousel>    
    <text name="gamecarouselLogoText">
      <color>FFFFFFFF</color>
      <glowColor>000000FF</glowColor>
      <glowSize>4</glowSize>
      <lineSpacing>1.0</lineSpacing>
    </text>
    <video name="md_video">
      <pos>0.76 0.408</pos>
      <maxSize>0.46 0.436</maxSize>
      <origin>0.5 0.5</origin>
      <delay>1.4</delay>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <loops>1</loops>
      <roundCorners>0.02</roundCorners>
    </video>

    <image name="md_fanart">
      <minSize>1 0.775</minSize>
      <pos>0.5 0.55</pos>
      <origin>0.5 0.5</origin>
      <color>FFFFFF80</color>
<colorEnd>FFFFFF30</colorEnd>
<gradientType>horizontal</gradientType>
      <linearSmooth>true</linearSmooth>
      <zIndex>9</zIndex>
    </image>
    
