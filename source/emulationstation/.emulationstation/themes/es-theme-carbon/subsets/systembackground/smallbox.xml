<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <include>./animatedbackgroundsubset.xml</include>
  <view name="system">
    <image name="box" extra="true">
      <path>{random:thumbnail}</path>
      <color>FFFFFFFF</color>
      <origin>0.5 0.5</origin>
      <roundCorners>0.05</roundCorners>
      <pos>0.50 0.18</pos>
      <origin>0.5 0.5</origin>
      <maxSize>0.24 0.24</maxSize>
      <zIndex>12</zIndex>
      <visible>true</visible>
    </image>
    <image name="box" extra="true" ifSubset="systemview:vertical">
      <pos>0.675 0.40</pos>
      <maxSize>0.40 0.55</maxSize>
    </image>
    <image name="box" extra="true" ifSubset="systemview:wheel">
      <pos>0.675 0.40</pos>
      <maxSize>0.40 0.55</maxSize>
    </image>
    <image name="ControllerOverlay" extra="true">
      <visible>false</visible>
    </image>
  </view>
</theme>
