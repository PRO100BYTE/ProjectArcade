<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
<feature supported="manufacturer">
    <view name="system">
      <text name="manufacturerName" extra="static">
     <!--   <pos>0.029 0.067</pos>-->
        <alignment>right</alignment>
      </text>
      <text name="fullName" extra="true">
     <!--   <pos>0.03 0.15</pos>-->
        <alignment>right</alignment>
      </text>
      <text name="releaseYyear" extra="true">
       <!-- <pos>0.03 0.187</pos>-->
        <alignment>right</alignment>
      </text>
    </view>
  </feature>
  <view name="system">

   <image name="logo">
      <!-- if system2 exists, take this version -->
      <path verticalScreen="true">./../../art/logos/${system.theme}-w.svg</path>
    </image>
    
    <carousel name="systemcarousel">
      <type>vertical</type>
      <pos>0 0</pos>
      <size>0.42 0.935</size>
      
      <pos>0 -0.5</pos>
      <size>0.42 1.435</size>

      <pos verticalScreen="true">0 0</pos>
      <size verticalScreen="true">0.6 1</size>

      <color>00000000</color>
      <colorEnd>00000000</colorEnd>
      <gradientType>horizontal</gradientType>
      <logoScale>1.8</logoScale>
      <logoSize>0.15 0.12</logoSize>
      <maxLogoCount>5</maxLogoCount>
      <systemInfoDelay>0</systemInfoDelay>
      
      <logoSize verticalScreen="true">0.33 0.15</logoSize>
      <logoScale verticalScreen="true">1.4</logoScale>
    </carousel>
    
    <image name="carousel-back" extra="true" verticalScreen="true">
      <path>./../../art/white.png</path>
      <color>00000080</color>
      <origin>0 0</origin>
      <pos>0 0.381</pos>
      <size>1 0.23</size>
      <zIndex>12</zIndex>
    </image>

    <image name="carousel-topline" extra="true"   verticalScreen="true">
      <path>./../../art/white.png</path>
      <color>${baseColor}</color>
      <origin>0 0</origin>
      <pos>0 0.3817</pos>
      <size>1 0.005</size>
      <zIndex>45</zIndex>
    </image>

    <image name="carousel-bottomline" extra="true"  verticalScreen="true">
      <path>./../../art/white.png</path>
      <color>${baseColor}</color>
      <origin>0 0</origin>
      <pos>0 0.6101</pos>
      <size>1 0.005</size>
      <zIndex>45</zIndex>
    </image>

    <text name="systemInfo">
      <pos>0.175 0.67</pos>
      <pos>0.05 0.67</pos>
      <size>1 0.25</size>      
      <backgroundColor>0000FF00</backgroundColor>
      <color>${systemInfoColor}</color>
      <glowColor>${glowColor}</glowColor>
      <glowSize>2</glowSize>
      <reflexion>0.20 0.0</reflexion>
    </text>
    <image name="CenterFade" extra="true">
      <tile>false</tile>
      <size>0.40 1</size>
      <pos>0.40 1</pos>
      <origin>1 1</origin>
      <path>./../../art/centerfade_v.png</path>
      <color>${centerFadeColor}</color>
      <visible>false</visible>
    </image>
    <image name="ControllerOverlay" extra="true">
      <tile>false</tile>
      <pos>0.675 0.40</pos>
      <maxSize>0.4 0.4</maxSize>      
    </image>

   <image name="darkwheel" extra="static" tinyScreen="false">
      <tile>false</tile>
      <pos>0.21 0.2175</pos>
      <size>0.36 0.285</size>
      <origin>0.5 0.5</origin>
      <path>./../../art/darkwheel.png</path>
      <zIndex>12</zIndex>
      <visible verticalScreen="true">false</visible>
    </image>


  </view>

<feature supported="manufacturer">
    <view name="system">
      <text name="systemInfoEx" extra="true">
        <alignment>right</alignment>
      </text>
    </view>
  </feature>
</theme>
