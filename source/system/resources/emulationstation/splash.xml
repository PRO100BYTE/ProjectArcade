      <origin>0 0</origin>
      <pos>0.25 0.87</pos>
      <size>0.5 0.036</size>
      <color>6060607F</color>
      <colorEnd>6060607F</colorEnd>
      <roundCorners>0.01</roundCorners>
    </image>
    <image name="progressbar:active">
      <tile>true</tile>
      <path>./progress.png</path>
      <color>${baseColor}</color>
      <colorEnd>${gradientEndColor}</colorEnd>
    </image>
    <image name="background">
      <pos>0.5 0.5</pos>
      <origin>0.5 0.5</origin>
	  <linearSmooth>true</linearSmooth>
      <maxSize>0.5 0.5</maxSize>
      <path>./splash_retrobat.png</path>
    </image>
    <text name="label">
      <color>FFFFFFFF</color>
      <glowColor>00000018</glowColor>
      <glowSize>3</glowSize>
      <glowOffset>1</glowOffset>
    </text>
