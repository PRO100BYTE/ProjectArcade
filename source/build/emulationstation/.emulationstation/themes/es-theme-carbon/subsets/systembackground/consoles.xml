<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <include>./animatedbackgroundsubset.xml</include>
  <include>./animatedcoverssubset.xml</include>
  <view name="system">
    <image name="ControllerOverlay" extra="true">
      <path>./../../art/consoles/default.png</path>
      <path>{random:image}</path>
      <path>./../../art/consoles/${system.theme}.png</path>
      <linearSmooth>true</linearSmooth>
      <maxSize>0.2 0.33</maxSize>

      <pos verticalScreen="true">0.5 0.22</pos>
      <maxSize verticalScreen="true">0.33 0.33</maxSize>
      <color>FFFFFFF0</color>
      <zIndex>21</zIndex>
    </image>
    <image name="ControllerOverlay" extra="true" region="eu"/>
    <image name="ControllerOverlay" extra="true" region="us">
      <path>./../../art/consoles/us/${system.theme}.png</path>
    </image>
    <image name="ControllerOverlay" extra="true" region="jp">
      <path>./../../art/consoles/jp/${system.theme}.png</path>
    </image>
  </view>
</theme>
