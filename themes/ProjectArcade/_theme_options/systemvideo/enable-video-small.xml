https://github.com/pajarorrojo/es-theme-PlayStation-X 
-->
<theme>
     <formatVersion>7</formatVersion>
     <view name="system">
          <video name="system_video" extra="true">
               <effect>none</effect>
               <pos>0.02 0.612</pos>
               <roundCorners>0</roundCorners>
               <size>0.212 0.25</size>
               <size ifSubset="aspect-ratio:4-3|5-4">0.22 0.22</size>
               <size ifSubset="aspect-ratio:16-9|16-10">0.212 0.25</size>
               <showSnapshotNoVideo>false</showSnapshotNoVideo>
               <showSnapshotDelay>false</showSnapshotDelay>
               <path ifSubset="video-system-random:enable-random|enable-ifnospot">{random}</path>
               <path ifSubset="video-system-random:disable-random|enable-ifnospot">./../../_theme_inc/videos/${system.theme}.mp4</path>
               <delay>1</delay>
               <zIndex>70</zIndex>
               <audio ifSubset="video-system-audio:disable-audio">false</audio>
          </video>


          <text name="system_description" extra="true">
               <size>0.54 0</size>
               <fontSize>0.023</fontSize>
               <backgroundColor>ff000000</backgroundColor>
               <pos>0.26 0.608</pos>


          </text>


     </view>
</theme>
