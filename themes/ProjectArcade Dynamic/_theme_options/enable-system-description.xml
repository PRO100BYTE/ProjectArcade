<theme>
     <formatVersion>7</formatVersion>
     <view name="system">
          <text name="system_description" extra="true">
               <text if="{system.manufacturer} == 'Collections'">Game collection</text>
               <text if="{system.manufacturer} == 'Collections'" lang="es">Colecci√≥n de juegos</text>
               <alignment>left</alignment>
               <verticalAlignment>top</verticalAlignment>
               <color>FFFFFF</color>
               <fontPath>./../_theme_inc/fonts/SST Roman.ttf</fontPath>
               <lineSpacing>1.2</lineSpacing>
               <zIndex>80</zIndex>
               <glowColor>00000069</glowColor>
               <glowSize>1</glowSize>
               <glowOffset>3 2</glowOffset>
          </text>
     </view>
</theme>
