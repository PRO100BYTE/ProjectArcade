<!-- Theme by pajarorrojo
https://github.com/pajarorrojo/es-theme-PlayStation-X 
-->
<theme>
   <formatVersion>7</formatVersion>

         <!-- VIDEO CONTROLS -->
   <view name="basic, detailed">
      <video name="md_video">
         <delay ifSubset="video-gamelist-delay:0sec">0.001</delay>
         <delay ifSubset="video-gamelist-delay:05sec">0.5</delay>
         <delay ifSubset="video-gamelist-delay:1sec">1</delay>
         <delay ifSubset="video-gamelist-delay:2sec">2</delay>
         <delay ifSubset="video-gamelist-delay:3sec">3</delay>
         <audio ifSubset="videosnap-audio:disabled">false</audio>
         <visible ifSubset="game-video:off">false</visible>
         <zIndex>99</zIndex>
         <effect>none</effect>
         <loops>1</loops>

      </video>

      <video ifSubset="game-video:window|inside" name="md_video">
         <!-- <default>./../_theme_options/colorsets/blue/background-psx-blue.mp4</default> -->
         <pos>0.760 0.405</pos>
         <pos ifSubset="aspect-ratio:4-3">0.760 0.345</pos>
         <pos ifSubset="aspect-ratio:5-4">0.760 0.343</pos>


         <maxSize>0.42 0.565</maxSize>
         <maxSize ifSubset="aspect-ratio:4-3">0.42 0.425</maxSize>
         <maxSize ifSubset="aspect-ratio:5-4">0.418 0.4</maxSize>

      </video>

      <video ifSubset="game-video:background" name="md_video">
         <zIndex>40</zIndex>
         <pos>0 0</pos>
         <size>1 1</size>
         <origin>0 0</origin>
         <storyboard>
            <animation property="opacity" from="0" to="1" duration="800" mode="easeIn" />
         </storyboard>
         <loops>1</loops>
      </video>
   </view>

      <view name="grid,carousel">
         <video name="md_video" ifSubset="game-video:window|oversize|background">
            <delay ifSubset="video-gamelist-delay:0sec">0.001</delay>
            <delay ifSubset="video-gamelist-delay:05sec">0.5</delay>
            <delay ifSubset="video-gamelist-delay:1sec">1</delay>
            <delay ifSubset="video-gamelist-delay:2sec">2</delay>
            <delay ifSubset="video-gamelist-delay:3sec">3</delay>
            <audio ifSubset="videosnap-audio:disabled">false</audio>
            <visible ifSubset="game-video:off">false</visible>
            <zIndex>99</zIndex>
            <effect>none</effect>
            <loops>1</loops>
         </video>

         <video ifSubset="game-video:window" name="md_video">
            <pos>0.154 0.3</pos>
            <pos ifSubset="aspect-ratio:4-3|5-4">0.145 0.272</pos>
            <maxSize>0.258 0.338</maxSize>
            <maxSize ifSubset="aspect-ratio:4-3|5-4">0.278 0.338</maxSize>

         </video>

         <video ifSubset="game-video:background" name="md_video">
            <zIndex>49</zIndex>
            <pos>0 -0.265</pos>
            <size>1 1</size>
            <origin>0 0</origin>
            <storyboard>
               <animation property="opacity" from="0" to="1" duration="800" mode="easeIn" />
            </storyboard>
         </video>

         <imagegrid name="gamegrid" ifSubset="game-video:inside">
            <showVideoAtDelay ifSubset="video-gamelist-delay:0sec">1</showVideoAtDelay>
            <showVideoAtDelay ifSubset="video-gamelist-delay:05sec">500</showVideoAtDelay>
            <showVideoAtDelay ifSubset="video-gamelist-delay:1sec">1000</showVideoAtDelay>
            <showVideoAtDelay ifSubset="video-gamelist-delay:2sec">2000</showVideoAtDelay>
            <showVideoAtDelay ifSubset="video-gamelist-delay:3sec">3000</showVideoAtDelay>
            <effect>none</effect>
            <audio ifSubset="videosnap-audio:disabled">false</audio>

         </imagegrid>

      </view>



      <view name="basic, detailed, grid">
         <video ifSubset="game-video:oversize" name="md_video">
            <maxSize>0.9 0.82</maxSize>
            <pos>0.5 0.528</pos>
            <effect>size</effect>
            <zIndex>500</zIndex>
            <loops>0</loops>
         </video>


      </view>

</theme>