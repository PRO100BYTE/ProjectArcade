	<view name="menu, system, detailed, grid">
		<helpsystem name="help">
			<iconColor>FFFFFFFF</iconColor>
			<iconUpDown>./snes/updown.png</iconUpDown>
			<iconLeftRight>./snes/leftright.png</iconLeftRight>
			<iconUpDownLeftRight>./snes/all.png</iconUpDownLeftRight>
			<iconA>./snes/a.png</iconA>
			<iconB>./snes/b.png</iconB>
			<iconX>./snes/x.png</iconX>
			<iconY>./snes/y.png</iconY>
			<iconL>./snes/l.png</iconL>
			<iconR>./snes/r.png</iconR>
			<iconStart>./snes/start.png</iconStart>
			<iconSelect>./snes/select.png</iconSelect>
