<theme>
	<formatVersion>7</formatVersion>

	<view name="menu, system, detailed, grid">
		<helpsystem name="help">
			<iconColor>FFFFFFFF</iconColor>
			<iconUpDown>./psx-color/updown.svg</iconUpDown>
			<iconLeftRight>./psx-color/leftright.svg</iconLeftRight>
			<iconUpDownLeftRight>./psx-color/all.svg</iconUpDownLeftRight>
			<iconA>./psx-color/a.svg</iconA>
			<iconB>./psx-color/b.svg</iconB>
			<iconX>./psx-color/x.svg</iconX>
			<iconY>./psx-color/y.svg</iconY>
			<iconL>./psx-color/l.svg</iconL>
			<iconR>./psx-color/r.svg</iconR>
			<iconStart>./psx-color/start.svg</iconStart>
			<iconSelect>./psx-color/select.svg</iconSelect>
		</helpsystem>
	</view>

	<view name="screen">
		<controllerActivity name="controllerActivity">
			<imagePath>./psx/controller.svg</imagePath>
		</controllerActivity>

	</view>

</theme>