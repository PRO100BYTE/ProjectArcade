<!-- Theme by pajarorrojo
https://github.com/pajarorrojo/es-theme-PlayStation-X 
-->
<theme>
   <formatVersion>7</formatVersion>
   <variables>
      <menuSelectedColor ifSubset="secondary_colorset:default">ffffff</menuSelectedColor>
      <menuSelectorColor ifSubset="secondary_colorset:default">0070d1</menuSelectorColor>
      <menuSelectorColorEnd ifSubset="secondary_colorset:default">003791</menuSelectorColorEnd>
      <menuFontcolor>DFDCDC</menuFontcolor>
      <menuSeparatorColor>555555</menuSeparatorColor>
      <menuGrouptitle>3CAEFB</menuGrouptitle>
      <menuGroupSeparator>3CAEFB</menuGroupSeparator>
      <menuTitleColor>DFDCDC</menuTitleColor>
      <menubgColor>003791</menubgColor>
      <backgroundgrid>00379180</backgroundgrid>
      <backgroundgridSelect ifSubset="secondary_colorset:default">F3C300</backgroundgridSelect>
      <menuFooter>555555</menuFooter>
      <gamelistSelectedColor>3CAEFB</gamelistSelectedColor>
      <gamelistSelectorColor ifSubset="secondary_colorset:default">0070d1</gamelistSelectorColor>
      <helpFontColor>DFDCDC</helpFontColor>
      <helpIconColor>DFDCDC</helpIconColor>
      <developerColor>00AC97</developerColor>
      <genreColor>3CAEFB</genreColor>
      <releaseColor>F3C300</releaseColor>
      <starFill>DF0024</starFill>
      <starUnfill>ffffff69</starUnfill>
      <manualOnColor>3CAEFB</manualOnColor>
      <savegameOnColor>3CAEFB</savegameOnColor>
      <cheevosOnColor>F3C300</cheevosOnColor>
      <splash.progressbarActive ifSubset="secondary_colorset:default">0070d1</splash.progressbarActive>
      <splash.progressbarActiveEnd>003791</splash.progressbarActiveEnd>
      <splash.progressbar>ffffff80</splash.progressbar>
      <splash.labelColor>ffffff</splash.labelColor>
      <sistema.lineainferior ifSubset="secondary_colorset:default">0070d1</sistema.lineainferior>
      <sistema.pie>030a18de</sistema.pie>
   </variables>


   <view name="system">
      <image name="background" extra="static">
         <path>./blue/background.png</path>
      </image>


   </view>

   <view name="basic, detailed">
      <image name="background" extra="static">
         <path>./blue/default-detailed.png</path>
      </image>

      <image name="background-art" extra="static">
         <path>./blue/background.png</path>
      </image>
   </view>

   <view name="grid">

      <image name="background" extra="static">
         <path>./blue/default-grid.png</path>
      </image>

      <image name="background-art" extra="static">
         <path>./blue/background.png</path>
      </image>

   </view>

   <view name="menu">
      <menuBackground name="menubg">
         <path>./blue/fond_menu.png</path>
         <fadePath>./blue/fond_menu_fade.png</fadePath>

      </menuBackground>

      <menuTextEdit name="menutextedit">
         <inactive>./../../_theme_inc/images/caja-texto-azul.png</inactive>
         <active>./../../_theme_inc/images/caja-texto-azul-activa.png</active>
      </menuTextEdit>
   </view>
</theme>