<!-- Theme by pajarorrojo
https://github.com/pajarorrojo/es-theme-PlayStation-X 
-->
<theme>
	<formatVersion>7</formatVersion>

	<view name="basic,detailed,grid">
		<image name="md_manual, md_savestate">
			<storyboard>
				<animation property="opacity" from="0.6" to="1" duration="350" mode="easeInOut" autoreverse="true" repeat="forever" />

			</storyboard>
		</image>
	</view>

	<view name="basic, detailed">


		<image name="md_flag">
			<pos>0.490 0.70</pos>
			<maxSize>0.031</maxSize>
			<linearSmooth>true</linearSmooth>
			<zIndex>51</zIndex>
		</image>

		<text name="md_players" onclick="gameoptions">
			<origin>0.5 0.5</origin>
			<fontPath>./../_theme_inc/fonts/players.ttf</fontPath>
			<text>1</text>
			<pos>0.49 0.76</pos>
			<alignment>center</alignment>
			<fontSize>0.042</fontSize>
			<fontSize ifSubset="aspect-ratio:4-3|5-4" tinyScreen="true">0.035</fontSize>
			<color>808080</color>
			<zIndex>100</zIndex>
		</text>


		<image name="md_manual,md_nomanual">
			<origin>0.5 0.5</origin>
			<path>./../_theme_inc/images/manual.png</path>
			<maxSize>0.03 0.04</maxSize>
			<zIndex>100</zIndex>
			<pos>0.49 0.88</pos>
		</image>


		<image name="md_savestate,md_nosavestate" onclick="savestates">
			<origin>0.5 0.5</origin>
			<path>./../_theme_inc/images/SaveState.png</path>
			<pos>0.49 0.82</pos>
			<maxSize>0.03 0.04</maxSize>
			<zIndex>150</zIndex>
		</image>

		<image name="md_nosavestate, md_nomanual">
			<color>808080</color>
		</image>

		<image name="md_savestate, md_manual">
			<color>${gamelistSelectorColor}e6</color>
		</image>


	</view>




	<view name="grid">

		<image name="md_flag">
			<pos>0.965 0.215</pos>
			<maxSize>0.022 0.05</maxSize>
			<linearSmooth>true</linearSmooth>
			<zIndex>51</zIndex>
		</image>

		<text name="md_players">
			<origin>0.5 0.5</origin>
			<fontPath>./../_theme_inc/fonts/players.ttf</fontPath>
			<text>1</text>
			<size>0.03 0.03</size>
			<pos>0.965 0.260</pos>
			<alignment>center</alignment>
			<fontSize>0.034</fontSize>
			<fontSize ifSubset="aspect-ratio:4-3|5-4" tinyScreen="true">0.033</fontSize>
			<color>Ffffff</color>
			<zIndex>100</zIndex>
		</text>


		<image name="md_manual,md_nomanual">
			<origin>0.5 0.5</origin>
			<pos>0.965 0.305</pos>
			<path>./../_theme_inc/images/manual.png</path>
			<maxSize>0.02 0.03</maxSize>
			<zIndex>100</zIndex>
		</image>


		<image name="md_savestate,md_nosavestate">
			<origin>0.5 0.5</origin>
			<path>./../_theme_inc/images/SaveState.png</path>
			<pos>0.965 0.350</pos>
			<maxSize>0.02 0.03</maxSize>
			<zIndex>150</zIndex>
		</image>

		<image name="md_nosavestate, md_nomanual">
			<color>808080</color>
		</image>

		<image name="md_savestate, md_manual">
			<color>${gamelistSelectorColor}e6</color>
		</image>


	</view>

</theme>