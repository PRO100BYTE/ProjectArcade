<theme>
	<formatVersion>7</formatVersion>
	<variables>
		<!-- listado de usuarios-->
		<theme.nick ifSubset="system-username:belmont">Gabriel Belmont</theme.nick>
		<theme.nick ifSubset="system-username:cloud">Cloud Strife</theme.nick>
		<theme.nick ifSubset="system-username:emulationstation">EmulationStation</theme.nick>
		<theme.nick ifSubset="system-username:ezio">Ezio Auditore</theme.nick>
		<theme.nick ifSubset="system-username:geralt">Geralt of Rivia</theme.nick>
		<theme.nick ifSubset="system-username:guybrush">Guybrush Threepwood</theme.nick>
		<theme.nick ifSubset="system-username:jackelguapo">Handsome Jack</theme.nick>
		<theme.nick ifSubset="system-username:kratos">Kratos</theme.nick>
		<theme.nick ifSubset="system-username:sonic">Sonic the Hedgehog</theme.nick>
		<theme.nick ifSubset="system-username:subzero">Sub Zero</theme.nick>
		<theme.nick ifSubset="system-username:laracroft">Lara Croft</theme.nick>
		<theme.nick ifSubset="system-username:larry">Larry Laffer</theme.nick>
		<theme.nick ifSubset="system-username:linkzelda">Link</theme.nick>
		<theme.nick ifSubset="system-username:megaman">Mega-Man</theme.nick>
		<theme.nick ifSubset="system-username:nathandrake">Nathan Drake</theme.nick>
		<theme.nick ifSubset="system-username:projectarcade">ProjectArcade</theme.nick>
		<theme.nick ifSubset="system-username:samus">Samus Aran</theme.nick>
		<theme.nick ifSubset="system-username:sephirot">Sephirot</theme.nick>
		<theme.nick ifSubset="system-username:solidsnake">Solid Snake</theme.nick>
		<theme.nick ifSubset="system-username:cheevos" if="{global.cheevos} == false" >${theme.ra-required}</theme.nick>
		<theme.nick ifSubset="system-username:cheevos"  if="{global.cheevos} == true">${cheevos.username}</theme.nick>
		<theme.nick ifSubset="system-username:netplay" if="{global.netplay} == false">${theme.netplay-required}</theme.nick>
		<theme.nick ifSubset="system-username:netplay" if="{global.netplay} == true">${global.netplay.username}</theme.nick>
		<theme.nick ifSubset="system-username:netplay" if="{screen.ratio} == '0/0'">Netplay ID ${theme.bato35compatilble}</theme.nick>
		<theme.nick ifSubset="system-username:playstationx">PSX</theme.nick>
	</variables>
</theme>
