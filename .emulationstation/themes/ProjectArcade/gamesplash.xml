
<theme>
	<formatVersion>7</formatVersion>
	<include>./theme.xml</include>

	<view name="splash">

		<image name="background-default" extra="true">
			<linearSmooth>true</linearSmooth>
			<path ifSubset="colorset:blue">./_theme_options/colorsets/blue/background.jpg</path>
			<path ifSubset="colorset:black">./_theme_options/colorsets/black/pa.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<zIndex>00</zIndex>
		</image>

		<image name="logo-splash" extra="true">
			<origin>0 0</origin>
			<pos>0.03 0.05</pos>
			<maxSize>0.4 0.3</maxSize>
			<maxSize ifSubset="aspect-ratio:4-3|5-4">0.2 0.2</maxSize>
			<path ifSubset="frontend:batocera">./_theme_inc/images/batocera-logo-splash.svg</path>
			<path ifSubset="frontend:retrobat">./_theme_inc/images/retrobat-logo.png</path>
			<path ifSubset="frontend:batocera-plus">./_theme_inc/images/batocera_plus_logo.png</path>
			<path ifSubset="frontend:emuelec">./_theme_inc/images/emuelec-logo-splash.png</path>
			<linearSmooth>true</linearSmooth>
		</image>

		<image name="background">
			<origin>0.5 0.3</origin>
			<roundCorners>0</roundCorners>
			<linearSmooth>false</linearSmooth>
			<alignment>center</alignment>
		</image>

		<image name="linea-inferior" extra="true">
			<path>./_theme_inc/images/pixel-blanco.png</path>
			<pos>0 0.935</pos>
			<size>1 0.0011</size>
			<backgroundColor>ff000000</backgroundColor>
			<verticalAlignment>top</verticalAlignment>
			<alignment>left</alignment>
			<linearSmooth>true</linearSmooth>
			<zIndex>99</zIndex>
		</image>

		<text name="loading" extra="true">
			<text >Loading... </text>
			<origin>0 0</origin>
			<pos>-0.02 0.945</pos>
			<size>1 0.05</size>
			<color>ffffff</color>
			<fontPath>./_theme_inc/fonts/SST Light.ttf</fontPath>
			<fontSize>0.028</fontSize>
			<alignment>right</alignment>
			<glowColor>00000035</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>3 2</glowOffset>
			<zIndex>99</zIndex>
			<backgroundColor>ff000000</backgroundColor>
		</text>


		<text name="label">
			<fontPath>./_theme_inc/fonts/SST Light.ttf</fontPath>
			<color>ffffff</color>
			<fontSize>0.045</fontSize>
			<alignment>center</alignment>
			<glowColor>00000035</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>3 2</glowOffset>
		</text>


	</view>
</theme>
